<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/album_item_iv_cover"
        android:layout_width="@dimen/dp_120_h"
        android:layout_height="@dimen/dp_120_h"
        android:layout_margin="@dimen/dp_10_h" />

    <TextView
        android:id="@+id/album_item_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_30_h" />

</LinearLayout>