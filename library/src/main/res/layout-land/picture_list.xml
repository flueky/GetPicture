<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/picture_list_ll_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90_h"
        android:background="@color/album_primary_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/picture_list_btn_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="相册"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp_30_h" />

        <TextView
            android:id="@+id/picture_list_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp_34_h" />

        <Button
            android:id="@+id/picture_list_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="取消"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp_30_h" />
    </LinearLayout>

    <GridView
        android:id="@+id/picture_list_gv_pics"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#efeff5"
        android:horizontalSpacing="@dimen/dp_10_h"
        android:numColumns="7"
        android:padding="@dimen/dp_10_h"
        android:verticalSpacing="@dimen/dp_10_h"></GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90_h"
        android:background="#FFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_20_h"
        android:paddingRight="@dimen/dp_20_h">

        <TextView
            android:id="@+id/picture_list_txt_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10_h"
            android:text="预览"
            android:textColor="@drawable/picture_list_txt_preview_selector"
            android:textSize="@dimen/dp_28_h" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/picture_list_txt_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/picture_list_btn_done_shape"
            android:padding="@dimen/dp_10_h"
            android:text="完成"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp_28_h" />
    </LinearLayout>

</LinearLayout>