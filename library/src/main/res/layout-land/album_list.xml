<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/album_list_ll_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90_h"
        android:background="@color/album_primary_color"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="返回"
            android:textSize="@dimen/dp_30_h"
            android:textColor="@android:color/white"
            android:visibility="invisible" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="相册"
            android:background="#00000000"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp_34_h" />

        <Button
            android:id="@+id/album_list_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:textSize="@dimen/dp_30_h"
            android:text="取消"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <ListView
        android:id="@+id/album_list_lv_albums"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </ListView>

</LinearLayout>